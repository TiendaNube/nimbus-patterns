{
  "name": "nimbus-patterns",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx --quiet",
    "lint:fix": "yarn lint --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand --watchAll=false",
    "test:ci": "yarn types:check && jest --ci --coverage",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:watch": "yarn test --watch",
    "types:check": "tsc --skipLibCheck --noEmit",
    "pre-commit": "lint-staged",
    "pre-push": "yarn test:coverage && yarn lint && yarn types:check",
    "prepare-husky": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TiendaNube/nimbus-patterns.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TiendaNube/nimbus-patterns/issues"
  },
  "homepage": "https://github.com/TiendaNube/nimbus-patterns#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@jest/types": "^29.2.1",
    "@testing-library/react": "^13.4.0",
    "@tiendanube/eslint-config": "^0.3.2",
    "@types/eslint": "^8",
    "@types/jest": "^29.2.1",
    "@types/prettier": "^2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=3.2.0"
  },
  "packageManager": "yarn@3.2.2"
}
