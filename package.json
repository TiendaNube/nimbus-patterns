{
  "name": "nimbus-patterns",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/*/*",
      "packages/*/*/components/*"
    ]
  },
  "scripts": {
    "build": "yarn clean && yarn build:packages",
    "build:docs": "babel-node -x .ts ./.scripts/json-documentation",
    "build:packages": "babel-node -x .ts ./.scripts/build-packages",
    "build:storybook": "build-storybook -c .storybook -o .build-storybook",
    "bump:packages": "babel-node -x .ts ./.scripts/bump-packages",
    "bump:check": "yarn version check",
    "bump:next": "yarn version apply --all --prerelease",
    "bump:stable": "yarn version apply --all",
    "clean": "yarn workspaces foreach -pv -pt --exclude nimbus-patterns run clean",
    "reset": "yarn clean && rm -rf node_modules .yarn/cache",
    "lint": "eslint packages --ext .jsx,.js,.ts,.tsx --quiet",
    "lint:fix": "yarn lint --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand --watchAll=false",
    "test:ci": "yarn types:check && jest --ci --coverage",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:watch": "yarn test --watch",
    "types:check": "tsc --skipLibCheck --noEmit",
    "pre-commit": "lint-staged",
    "pre-push": "yarn test:coverage && yarn lint && yarn types:check",
    "start:dev": "yarn storybook",
    "storybook": "start-storybook -p 6006",
    "prepare-husky": "husky install",
    "publish:next": "yarn bump:next && npm run build && yarn workspaces foreach -pv -pt --exclude nimbus-patterns npm publish --tolerate-republish --access public --tag next",
    "publish:stable": "npm run build && yarn bump:stable && yarn workspaces foreach -pv -pt --exclude nimbus-patterns npm publish --tolerate-republish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TiendaNube/nimbus-patterns.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TiendaNube/nimbus-patterns/issues"
  },
  "homepage": "https://github.com/TiendaNube/nimbus-patterns#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.7",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@jest/types": "^29.2.1",
    "@mdx-js/react": "^1.6.22",
    "@nimbus-ds/components": "^4.1.0",
    "@nimbus-ds/scripts": "1.2.1-rc.1",
    "@nimbus-ds/styles": "^8.0.0",
    "@nimbus-ds/tokens": "^7.0.0",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-docs": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/webpack": "^6.5.1",
    "@testing-library/react": "^13.4.0",
    "@tiendanube/eslint-config": "^0.3.2",
    "@types/babel__core": "^7",
    "@types/eslint": "^8",
    "@types/jest": "^29.2.1",
    "@types/prettier": "^2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "babel-loader": "^8.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "storybook-dark-mode": "^2.0.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "turbo": "^1.8.8",
    "typescript": "~4.7.4"
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=3.2.0"
  },
  "packageManager": "yarn@3.2.2"
}
